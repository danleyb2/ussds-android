<?xml version="1.0" encoding="utf-8"?>
<com.nyaundibrian.ussds.Views.FixedSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeContainerUssdList"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ussd_list"
        android:name="com.nyaundibrian.ussds.UssdListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.nyaundibrian.ussds.UssdListActivity"
        tools:listitem="@layout/ussd_list_content" />

</com.nyaundibrian.ussds.Views.FixedSwipeRefreshLayout>