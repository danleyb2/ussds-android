<?xml version="1.0" encoding="utf-8"?>
<com.nyaundibrian.ussds.Views.FixedSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView

        android:id="@+id/company_list"
        android:name="com.nyaundibrian.ussds.CompanyListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.nyaundibrian.ussds.CompanyListActivity"
        tools:listitem="@layout/company_list_item_card" />

</com.nyaundibrian.ussds.Views.FixedSwipeRefreshLayout>

